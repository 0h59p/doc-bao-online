<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="50"
    tools:context="tonghopp.tonghop">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#009688"
        android:layout_weight="3"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/bthome"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_black_24dp"
                >
            </ImageButton>
        </LinearLayout>
        <TextView
            android:id="@+id/txttieude"
            android:gravity="center"
           android:layout_weight="16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUC KHOE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            >

        </TextView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:background="@drawable/ic_view_list_black_24dp"
                android:scaleType="fitEnd"
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageButton>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="47"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar1"
                android:scaleType="fitXY">

            </ImageView>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VNEXPRESS"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar2"
                android:scaleType="fitXY">
            </ImageView>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIN NÓNG 24H"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <ListView

            android:layout_width="match_parent"
            android:id="@+id/listview2"
            android:layout_height="216dp" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar3"
                android:scaleType="fitXY">
            </ImageView>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NGÔI SAO"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/listview3"

            android:layout_width="match_parent"
            android:layout_height="216dp">

        </ListView>

    </LinearLayout>



</LinearLayout>